<persistence
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">
  <persistence-unit name="template">
  
  	<provider>org.hibernate.ejb.HibernatePersistence</provider>
  	
  	<class>br.com.template.entidade.Usuario</class>
  	<class>br.com.template.entidade.Pessoa</class>
  	<class>br.com.template.entidade.Endereco</class>
  	<class>br.com.template.entidade.Funcionario</class>
  	
    
   	<properties>
	
		<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		<property name="hibernate.transaction.flush_before_completion" value="true" />
		<property name="hibernate.transaction.auto_close_session" value="true" />
		<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="true" />
		
		<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/template"/>
		<property name="javax.persistence.jdbc.user" value="postgres"/>
		<property name="javax.persistence.jdbc.password" value="postgres"/>
		<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		
	</properties>
		
